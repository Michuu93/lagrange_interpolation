unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Unit2;

type
  TForm1 = class(TForm)
    Label2: TLabel;
    Edit1: TEdit;
    Button1: TButton;
    Label3: TLabel;
    Label4: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

type vector = array [0..20] of Extended;

var
  Form1: TForm1;
  i, n, st, y : Integer;
  x, wynik : Extended;
  f : vector;
  plik: TextFile;

implementation

{$R *.dfm}



procedure wczytaj_liste_txt();
  var
  plik : TextFile;
  S : String; // zmienna tymczasowa
  numer : Integer;
  begin
    numer:=0;
    AssignFile(plik, 'f.txt');
      try
        Reset(plik);
        { pêtla odczytuje kolejne wiersze pliku tekstowego }
        while not Eof(plik) do
        begin
            if numer>20 then
              begin
                ShowMessage('Podaj maksymalnie 21 wartoœci f(x)!');
                exit;
              end;

            try
              Readln(plik, S); // odczytanie wierszy i przypisanie zawartoœci do zmiennej S
              f[numer]:=StrToInt(S);
            except
               ShowMessage('B³¹d wczytywania f(x)!');
               exit;
            end;

            numer:=numer+1;
        end;
      finally
        n:=numer-1;
        CloseFile(plik);
      end;
    end;

procedure TForm1.Button1Click(Sender: TObject);
begin
    wczytaj_liste_txt;

    Label3.Caption:= '';
    Label4.Caption:= 'st =   n = ';

    try
      x:= StrToInt(Edit1.Text);
    except
      ShowMessage('Podaj x!');
      exit;
    end;

    try
       wynik:= GReinschvalue(n, f, x, st);
       Label3.Caption:= FloatToStrF(wynik, ffExponent, 15, 4);
       Label4.Caption:= 'st = ' + IntToStr(st) + '  n = ' + IntToStr(n);
    except
        ShowMessage('B³¹d wywo³ania funkcji!');
        exit;
    end;

end;

end.
